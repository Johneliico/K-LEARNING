<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zaea"
    tools:context=".subtract">


    <EditText
        android:id="@+id/etNumber3"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_above="@+id/etNumber4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/grape"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Enter First number" />

    <EditText
        android:id="@+id/etNumber4"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_above="@+id/tvAnswere"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/grape"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:hint="Enter Second number"/>

    <Button
        android:id="@+id/btnSub"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="136dp"
        android:layout_marginEnd="126dp"
        android:layout_marginBottom="117dp"
        android:background="@drawable/andoks"
        android:fontFamily="@font/luckiest_guy"
        android:text="Subtract"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvAnswere"
        android:layout_width="211dp"
        android:layout_height="57dp"
        android:layout_above="@+id/btnSub"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/russo_one"
        android:text="Answer:"
        android:textColor="#00cc00"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="14dp"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:text="SUBTRACTION"
        android:textAlignment="center"
        android:textColor="#00cc00"
        android:textSize="39dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/etNumber3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/russo_one"
        android:gravity="center"
        android:text="Subtracting Two Numbers"
        android:textColor="#00cc00"
        android:textSize="20dp" />


</RelativeLayout>