<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sum"
    tools:context=".choices">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="470dp"
        android:layout_height="165dp"
        android:background="@drawable/kler"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.779"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="319dp"
        android:layout_height="33dp"
        android:fontFamily="@font/coiny"
        android:gravity="center"
        android:text="LEARNING APPS FOR KIDS"
        android:textColor="#0000ff"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.345" />

    <Button
        android:id="@+id/button5"
        android:layout_width="335dp"
        android:layout_height="87dp"
        android:background="@drawable/buts"
        android:fontFamily="@font/slackey"
        android:text="MATH FOR KIDS"
        android:onClick="math"
        android:textColor="#1a8cff"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="335dp"
        android:layout_height="87dp"
        android:background="@drawable/blue"
        android:fontFamily="@font/slackey"
        android:text="SCIENCE FOR KIDS"
        android:textColor="#ff1a1a"
        android:onClick="science"
        android:textSize="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/button7"
        android:layout_width="335dp"
        android:layout_height="87dp"
        android:background="@drawable/green"
        android:fontFamily="@font/slackey"
        android:text="K-QUIZZ"
        android:onClick="quiz"
        android:textColor="#ffff00"
        android:textSize="29dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintVertical_bias="0.274" />


</androidx.constraintlayout.widget.ConstraintLayout>