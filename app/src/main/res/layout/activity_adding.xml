<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sagef"
    tools:context=".adding">


    <EditText
        android:id="@+id/etNumber1"
        android:layout_width="254dp"
        android:layout_height="62dp"
        android:layout_above="@+id/etNumber2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/grape"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="@color/black"
        android:hint="Enter First number" />

    <EditText
        android:id="@+id/etNumber2"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_above="@+id/tvAnswer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/grape"
        android:ems="10"
        android:inputType="number"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="@color/black"
        android:hint="Enter Second number" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="150dp"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="110dp"
        android:background="@drawable/gradient"
        android:fontFamily="@font/luckiest_guy"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="194dp"
        android:layout_height="66dp"
        android:layout_above="@+id/btnAdd"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/russo_one"
        android:text="Answer:"
        android:textColor="#ff8000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_above="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/luckiest_guy"
        android:gravity="center"
        android:text="ADDITION"
        android:textAlignment="center"
        android:textColor="#ff8000"
        android:textSize="55dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="259dp"
        android:layout_height="46dp"
        android:layout_above="@+id/etNumber1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="72dp"
        android:gravity="center"
        android:textColor="#ff8000"
        android:layout_marginBottom="12dp"
        android:text="Adding Two Numbers"
        android:fontFamily="@font/russo_one"
        android:textSize="20dp"/>

</RelativeLayout>